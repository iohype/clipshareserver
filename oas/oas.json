{
  "openapi": "3.0.3",
  "info": {
    "version": "0.0.1",
    "title": "ClipShare v1 API",
    "description": "ClipShare v1 API",
    "contact": {
      "email": "vaguemail369@gmail.com",
      "name": "IOHype",
      "url": "https://github.com/iohype"
    },
    "license": {
      "name": "MIT",
      "url": "https://spdx.org/licenses/MIT"
    }
  },
  "servers": [
    {
      "url": "localhost:{port}",
      "variables": {
        "port": {
          "default": "8080",
          "description": "Port to run the server on"
        }
      }
    }
  ],
  "paths": {
    "/clips": {
      "get": {
        "summary": "Get clips",
        "description": "Get shared clips for authed user",
        "operationId": "clips/get",
        "parameters": [
          {
            "name":"since",
            "description": "Get all clips shared after specified time. This is a unix timestamp",
            "in": "query",
            "required": false,
            "schema": {
              "type": "string",
              "example": "1601620291"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/clip"
                  }
                }
              }
            }
          },
          "401": {
            "$ref": "#/components/responses/requires_authentication"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "clip": {
        "title": "Clip",
        "description": "Clip Item",
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "timestamp": {
            "type": "string"
          },
          "data": {
            "type": "string"
          }
        }
      },
      "basic-error": {
        "title": "Basic Error",
        "description": "A Basic Error",
        "type": "object",
        "properties": {
          "message": {
            "type": "string"
          }
        }
      }
    },
    "responses": {
      "requires_authentication": {
        "description": "Requires Authentication",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/basic-error"
            }
          }
        }
      }
    }
  }
}